<script>
  window.addEventListener('DOMContentLoaded', () => {
    function updatePopulation() {
      fetch('https://us-population-api.onrender.com/api/population')
        .then(res => res.json())
        .then(data => {
          document.getElementById("us-population").textContent =
            `U.S. POPULATION: ${data.population.toLocaleString()}`;
        })
        .catch(err => {
          document.getElementById("us-population").textContent = "ERROR FETCHING DATA";
          console.error("API error:", err);
        });
    }

    updatePopulation();
    setInterval(updatePopulation, 1000); // refresh every second
  });
</script>

